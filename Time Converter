import java.util.Scanner;

public class Program {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int days = scanner.nextInt();
	 
	
;
		//your code goes here

		//declare
		int ConHou, ConMin, ConSec;

		//convert to hourse
		ConHou = days*24;

		//convert to minutes
		ConMin = ConHou*60;

		//convert to seconds
		ConSec = ConMin*60;
		System.out.println(ConSec);

		
	}
}
